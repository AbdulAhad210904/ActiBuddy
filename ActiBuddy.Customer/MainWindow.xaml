        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ActiBuddy.Customer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="View Activities" Click="ViewActivitiesButton_Click" Width="200" Margin="5"/>
            <Button Content="My Activities" Click="MyActivitiesButton_Click" Width="200" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
